{
  "extends": "astro/tsconfigs/strict",
  "exclude": [
    "node_modules",
    "dist",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@utils": [
        "src/utils/index.ts"
      ]
    },
    "jsx": "preserve",
    "jsxImportSource": "preact",
  }
}
