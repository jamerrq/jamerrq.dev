{
  "extends": "astro/tsconfigs/strict",
  "exclude": [
    "node_modules",
    "dist",
    "astro.config.ts",
    "public/prism.js"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@data/*": [
        "src/data/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@utils": [
        "src/utils/index.ts"
      ],
      "@movies/*": [
        "src/movies/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
    },
    "jsx": "preserve",
    "jsxImportSource": "preact",
  }
}
