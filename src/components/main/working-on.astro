---
import { siGitkraken } from 'simple-icons'

interface Props {
  lang: string
}
const { lang = 'en' }: Props = Astro.props

import Box from '@components/boxes/box.astro'
---

<Box
  title={lang === 'en'
    ? "Projects I'm working on"
    : 'Proyectos en los que trabajo'}
  otherStyles='xl:col-span-2 xl:row-span-4 p-4'
>
  <header
    class='text-3xl flex gap-2 text-slate-950 dark:text-emerald-300 items-center'
  >
    <p>
      {lang === 'en' ? 'Currently At' : 'Actualmente En'}
    </p>
    <svg
      class='w-8 h-8 inline-flex shadow rounded-full dark:bg-slate-900/80'
      set:html={siGitkraken.svg}
      fill={`#${siGitkraken.hex}`}
    />
  </header>
  <div
    class='my-2 px-5 text-base text-slate-900 dark:text-slate-300 text-center'
  >
    <a
      href='https://www.ipgmediabrands.com/'
      target='_blank'
      rel='noopener noreferrer'
    >
      {
        lang === 'en'
          ? 'Data/AI Scientist at Proactiva Consulting (consulting for IPG Mediabrands MEX and LATAM)'
          : 'Científico de Datos/IA en Proactiva Consulting (consultoría para IPG Mediabrands MEX y LATAM)'
      }
    </a>
  </div>
</Box>
