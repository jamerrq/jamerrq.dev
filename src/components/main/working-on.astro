---
import { siGitkraken } from 'simple-icons'

interface Props {
  lang: string
}
const { lang = 'en' }: Props = Astro.props

import Box from '@components/boxes/box.astro'

import WorkingOnTsx from './working-on.tsx'
// import ThreeDots from '@components/loaders/ThreeDots.astro'
---

<Box
  title="Projects I'm working on"
  otherStyles='xl:col-span-2 xl:row-span-4 p-4'
>
  <header
    class='text-3xl flex gap-2 text-emerald-950 dark:text-emerald-300 items-center'
  >
    <p>
      <!-- Working on -->
      {lang === 'en' ? 'Working On' : 'Trabajando En'}
    </p>
    <svg
      class='w-8 h-8 inline-flex shadow bg-white/50 p-1 rounded dark:bg-slate-900/80'
      set:html={siGitkraken.svg}
      fill={`#${siGitkraken.hex}`}
    />
  </header>
  <WorkingOnTsx lang={lang} client:only='preact' />
</Box>
