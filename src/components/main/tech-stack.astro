---
const TECH_STACK_STYLES: string = [
  'col-span-2',
  'row-span-3',
  'bg-slate-300',
  'rounded-sm',
  // 'shadow-[0_0_0.5rem_rgba(0_0_0_0.5)]',
  'shadow-[0_0_0.3rem_rgb(69_26_3)]', // rgb(69, 26, 3)
  'dark:shadow-[0_0_0.3rem_rgb(253_230_138)]', // rgb(253, 230, 138)
  'flex',
  'flex-col',
  'p-2',
  'items-center',
  'justify-around',
  // 'text-2xl',
  // 'font-bold',
  // 'text-slate-950',
  'font-rubik-doodle',
  'w-full',
  'h-full',
  'transition-all',
  'border-2',
  'border-amber-500',
  // 'dark:border-amber-500',
  'text-amber-950',
  'dark:text-amber-300',
  'dark:bg-slate-900',
  'hover:scale-[1.02]',
  'hover:transition-all',
  'text-2xl'
].join(' ')
import {
  siNodedotjs,
  siExpress,
  siSequelize,
  siPostgresql,
  siTypescript,
  siPython,
  siCsharp,
  siGnubash,
  siGit,
  siVisualstudiocode,
  siDocker,
  siUbuntu as siLinux,
  siDevdotto
} from 'simple-icons'
// class='flex gap-2 [&>img]:rounded-sm bg-emerald-300 p-1 rounded-sm'
const ICON_BLOCKS_STYLES = [
  'flex',
  'gap-2',
  '[&>img]:rounded-sm',
  'p-1',
  'rounded-sm'
].join(' ')
interface Props {
  lang?: string
}
const { lang = 'en' }: Props = Astro.props

const SUBTITLE_STYLES = ['flex', 'flex-row', 'gap-2', 'text-2xl'].join(' ')
---

<a
  title='The tools I (love) work with'
  class={TECH_STACK_STYLES}
  href={lang === 'en' ? 'tech-stack' : '/es/tech-stack'}
  transition:name='tech-stack'
>
  <div class='gap-2 flex font-bold text-4xl'>
    <p>
      {lang === 'en' ? 'Tech Stack' : 'Tecnologías'}
    </p>
  </div>
  <div class='grid grid-cols-2 gap-2 items-center justify-items-center'>
    <div class={SUBTITLE_STYLES}>
      <p class='font-semibold'>Backend</p>
    </div>
    <div class={`${ICON_BLOCKS_STYLES} bg-emerald-100`}>
      <!-- Node -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siNodedotjs.svg}
        fill={`#${siNodedotjs.hex}`}
      />
      <!-- Express -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siExpress.svg}
        fill={`#${siExpress.hex}`}
      />
      <!-- PostgreSQL -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siPostgresql.svg}
        fill={`#${siPostgresql.hex}`}
      />
      <!-- Sequelize -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siSequelize.svg}
        fill={`#${siSequelize.hex}`}
      />
    </div>
    <div class={SUBTITLE_STYLES}>
      <p class='font-semibold'>
        {lang === 'en' ? 'Languages' : 'Dialectos'}
      </p>
    </div>
    <div class={`${ICON_BLOCKS_STYLES} bg-emerald-200`}>
      <!-- TypeScript -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siTypescript.svg}
        fill={`#${siTypescript.hex}`}
      />
      <!-- Bash -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siGnubash.svg}
        fill={`#${siGnubash.hex}`}
      />
      <!-- Python -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siPython.svg}
        fill='#ff9900'
      />
      <!-- C# -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siCsharp.svg}
        fill={`#${siCsharp.hex}`}
      />
    </div>
    <div class={SUBTITLE_STYLES}>
      <p class='font-semibold'>
        {lang === 'en' ? 'Tools' : 'Herramientas'}
      </p>
    </div>
    <div class={`${ICON_BLOCKS_STYLES} bg-emerald-300`}>
      <!-- Git -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siGit.svg}
        fill={`#${siGit.hex}`}
      />
      <!-- Visual Studio Code -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siVisualstudiocode.svg}
        fill={`#${siVisualstudiocode.hex}`}
      />
      <!-- Docker -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siDocker.svg}
        fill={`#${siDocker.hex}`}
      />
      <!-- Linux -->
      <svg
        class='w-6 h-6 hover:scale-110'
        set:html={siLinux.svg}
        fill={`#FE7A36`}
      />
    </div>
  </div>
  <aside class='p-2 rounded-sm flex gap-2 justify-center items-center'>
    <p class='font-bold text-base'>
      <!-- Tap to see more -->
      {lang === 'en' ? 'Tap to see more' : 'Toca para ver más'}
    </p>
    <svg
      class='w-6 h-6 dark:fill-amber-100 fill-amber-950'
      set:html={siDevdotto.svg}
    />
  </aside>
</a>
