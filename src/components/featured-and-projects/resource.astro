---
interface Props {
  flexDirection?: 'row' | 'col'
  gap?: number
}
const { flexDirection = 'row', gap = 3 } = Astro.props
const RESOURCE_STYLES: string = [
  'col-span-2',
  'row-span-4',
  'bg-slate-300',
  'rounded-sm',
  // 'shadow-[0_0_0.5rem_rgba(0_0_0_0.5)]',
  'shadow-[0_0_0.3rem_rgb(8_51_68)]', // rgb(8, 51, 68)
  'dark:shadow-[0_0_0.3rem_rgb(103_232_249)]', // rgb(103, 232, 249)
  'flex',
  // 'flex-row',
  flexDirection === 'row' ? 'flex-row' : 'flex-col',
  `gap-${gap}`,
  'items-center',
  'justify-center',
  // 'text-2xl',
  'font-bold',
  // 'text-slate-950',
  'font-rubik-doodle',
  'w-full',
  'h-full',
  'transition-all',
  'border-2',
  'border-cyan-950',
  'dark:border-cyan-500',
  'text-cyan-950',
  'dark:text-cyan-300',
  'dark:bg-slate-900',
  'hover:scale-[1.02]',
  'hover:transition-all',
  'responsive-text-sm'
].join(' ')
---

<article class={RESOURCE_STYLES}>
  <slot />
</article>
