---
import Bento from '@components/main/bento.astro'
import About from './about.astro'
import Buttons from '@components/main/buttons.astro'
import ProjectsPreact from './projects.tsx'
interface Props {
  lang: string
}
const { lang = 'en' }: Props = Astro.props
---

<Bento>
  <About lang={lang} />
  <Buttons href={lang === 'en' ? '/es/proyectos' : '/projects'} />
  <ProjectsPreact lang={lang} client:only='preact' />
</Bento>
