---
import Typed from './typed.astro'
import StripedPocketTee from './css-peeps/striped-pocket-tee.astro'
import StripedPocketTeeLight from './css-peeps/striped-pocket-tee-light.astro'
---

<div
  class='row-span-2 col-span-2 title dark:bg-emerald-900 dark:text-emerald-300 text-emerald-950 bg-emerald-400 p-2 rounded-sm w-full flex items-center flex-row'
>
  <div class='flex flex-col'>
    <p class='font-rubik-doodle font-semibold'>@jamerrq.dev</p>
    <!-- <div class="input-wrapper">
      <span class="placeholder"></span>
    </div> -->
    <Typed />
  </div>
  <StripedPocketTee />
  <StripedPocketTeeLight />
</div>

<style>
  @charset "UTF-8";

  .title {
    box-shadow: 0 0 0.5rem rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 700;
    font-family: 'Rubik Doodle Shadow';
    width: 100%;
    height: 100%;
    transition: all 0.2s ease-in-out;
  }
</style>
