---
import Bento from '@components/main/bento.astro'
import Buttons from '@components/main/buttons.astro'
import BlogAbout from '@components/blog/blog-about.astro'
import LastEntries from '@components/blog/last-entries'
interface Props {
  lang: string
}
const { lang = 'en' }: Props = Astro.props
---

<Bento>
  <Buttons href={lang === 'en' ? '/es/blog' : '/blog'} />
  <BlogAbout lang={lang} />
  <LastEntries client:load />
</Bento>
