---
const ABOUT_STYLES = [
  'col-span-4',
  'row-span-1',
  'bg-slate-300/90',
  'dark:bg-slate-900/90',
  'dark:text-slate-300',
  'rounded-[10px]',
  'flex',
  'items-center',
  'justify-center',
  'font-bold',
  'text-black',
  'font-primary',
  'w-full',
  'xl:h-full',
  'transition-all',
  'hover:border-2',
  'dark:border-cyan-300',
  'border-cyan-950',
  'text-4xl',
  'flex-row',
  'gap-2',
  'text-slate-900',
  'dark:text-slate-300',
  'p-2'
].join(' ')

import { siGitbook } from 'simple-icons'

interface Props {
  lang: string
}
const { lang = 'en' }: Props = Astro.props
---

<a
  class={ABOUT_STYLES}
  transition:name='blog'
  href={lang === 'en' ? '/' : '/es'}
>
  <span class='dark:text-cyan-300'>Blog</span>
  <svg
    class='w-8 h-8 inline-flex dark:fill-cyan-300 fill-amber-950'
    set:html={siGitbook.svg}
  />
</a>
