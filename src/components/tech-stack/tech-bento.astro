---
import Title from './title.astro'
import About from './about-tech.astro'
import WebDev from './web-dev.astro'
import Buttons from '../main/buttons.astro'
import DevTools from './dev-tools.astro'
import Os from './os.astro'
import Testing from './testing.astro'
import Languages from './languages.astro'
import Bento from '../main/bento.astro'
interface Props {
  lang?: string
}
const { lang = 'en' }: Props = Astro.props
---

<Bento>
  <About lang={lang} />
  <Buttons href={lang === 'en' ? '/es/tech-stack' : '/tech-stack'} />
  <DevTools lang={lang} />
  <WebDev lang={lang} />
  <Title lang={lang} />
  <Os />
  <Languages lang={lang} />
  <Testing lang={lang} />
</Bento>
