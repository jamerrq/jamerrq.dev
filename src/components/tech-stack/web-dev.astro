---
import Box from '@components/boxes/box.astro'

import TechIcon from '@components/icons/tech-icon.astro'
import TechIcons from '@data/tech-icons'
const { backend, frontend, cloud } = TechIcons

interface Props {
  lang?: string
}
const { lang = 'en' }: Props = Astro.props
---

<Box
  title='Web Dev'
  otherStyles='xl:row-span-4 xl:col-span-2 animate-delay-100'
  animated
>
  <header>
    <h1 class='text-3xl dark:text-emerald-300'>
      {
        {
          en: 'Web Development',
          es: 'Desarrollo Web'
        }[lang]
      }
    </h1>
  </header>
  <ul class='text-xl items-center p-1 w-full flex flex-col gap-1'>
    <li>
      <header
        class='flex gap-2 justify-center dark:text-cyan-300 text-cyan-950'
      >
        <h2>Backend</h2>
      </header>
      <section>
        <ul class='flex gap-1 w-full flex-wrap p-1 rounded-[10px]'>
          {
            backend.map((tech) => (
              <li>
                <TechIcon obj={tech} />
              </li>
            ))
          }
        </ul>
      </section>
      <li>
        <header
          class='flex gap-2 justify-center dark:text-cyan-300 text-cyan-950'
        >
          <h2>Frontend</h2>
          <!-- <p class='font-thin'></p> -->
        </header>
        <ul class='flex gap-1 w-full flex-wrap [&>li>a>img]:border-2'>
          {
            frontend.map((tech) => (
              <li>
                <TechIcon obj={tech} />
              </li>
            ))
          }
        </ul>
      </li>
      <li>
        <header
          class='flex gap-2 justify-center dark:text-cyan-300 text-cyan-950'
        >
          <h2>
            {
              {
                en: 'Cloud',
                es: 'Nube'
              }[lang]
            }
          </h2>
          <!-- <p class='font-thin'>󰅟</p> -->
        </header>
        <ul class='flex gap-1 w-full flex-wrap [&>li>a>img]:border-2'>
          {
            cloud.map((tech) => (
              <li>
                <TechIcon obj={tech} />
              </li>
            ))
          }
        </ul>
      </li>
    </li>
  </ul>
</Box>
