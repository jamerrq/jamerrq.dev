---
const ABOUT_ME_STYLES = [
  'col-span-4',
  'row-span-2',
  'bg-slate-300',
  'dark:bg-slate-900',
  'dark:text-slate-300',
  'rounded-sm',
  'shadow-[0_0_0.5rem_rgba(0_0_0_0.5)]',
  'flex',
  'items-center',
  'justify-center',
  'font-bold',
  'text-black',
  'font-rubik-doodle',
  'w-full',
  'h-full',
  'transition-all',
  'border-2',
  'dark:border-emerald-300',
  'border-emerald-950',
  'responsive-text-xs',
  'flex-col',
  '[&>p]:font-fira',
  '[&>p]:text-base',
  'text-slate-900',
  'dark:text-slate-300'
].join(' ')
