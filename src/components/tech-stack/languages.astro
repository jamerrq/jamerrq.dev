---
import Box from '@components/boxes/box.astro'
import {
  siPython,
  siJavascript,
  siTypescript,
  siCsharp,
  siGnubash
} from 'simple-icons'

interface Props {
  lang?: string
}
const { lang = 'en' }: Props = Astro.props

// {SVGS_STYLES}
const SVGS_STYLES = [
  'xl:w-8 w-6',
  'xl:h-8 h-6',
  'fill-indigo-950',
  'dark:fill-indigo-300'
].join(' ')
---

<Box
  title='My Social Links'
  animated
  otherStyles='xl:col-span-2 xl:row-span-2 gap-4 animate-delay-200'
>
  <div class='flex gap-2 justify-center'>
    <h2 class='text-3xl dark:text-emerald-300'>
      {lang === 'en' ? 'Languages' : 'Lenguajes'}
    </h2>
  </div>
  <div
    class='flex justify-around w-full [&_a]:flex [&_a]:flex-col [&_a]:items-center [&_a]:gap-1 [&_span]:text-xs [&_span]:font-bold'
  >
    <!-- Python -->
    <a
      href='https://www.python.org/'
      target='_blank'
      rel='noopener noreferrer'
      class='hover:scale-110'
      title='Python'
    >
      <svg class={SVGS_STYLES} set:html={siPython.svg} />
      <span>Python</span>
    </a>
    <!-- JavaScript -->
    <a
      href='https://developer.mozilla.org/en-US/docs/Web/JavaScript'
      target='_blank'
      rel='noopener noreferrer'
      class='hover:scale-110'
      title='JavaScript'
    >
      <svg class={SVGS_STYLES} set:html={siJavascript.svg} />
      <span>JavaScript</span>
    </a>
    <!-- TypeScript -->
    <a
      href='https://www.typescriptlang.org/'
      target='_blank'
      rel='noopener noreferrer'
      class='hover:scale-110'
      title='TypeScript'
    >
      <svg class={SVGS_STYLES} set:html={siTypescript.svg} />
      <span>TypeScript</span>
    </a>
    <!-- Bash -->
    <a
      href='https://www.gnu.org/software/bash/'
      target='_blank'
      rel='noopener noreferrer'
      class='hover:scale-110'
      title='Bash'
    >
      <svg class={SVGS_STYLES} set:html={siGnubash.svg} />
      <span>Bash</span>
    </a>
    <!-- C# -->
    <a
      href='https://docs.microsoft.com/en-us/dotnet/csharp/'
      target='_blank'
      rel='noopener noreferrer'
      class='hover:scale-110'
      title='C#'
    >
      <svg class={SVGS_STYLES} set:html={siCsharp.svg} />
      <span>C#</span>
    </a>
  </div>
</Box>
