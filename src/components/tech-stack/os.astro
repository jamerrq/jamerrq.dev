---
const OS_STYLES = [
  'col-span-1',
  'row-span-2',
  'gap-2',
  'bg-slate-300',
  'rounded-sm',
  'shadow-[0_0_0.5rem_rgba(0_0_0_0.5)]',
  'flex',
  'flex-col',
  'items-center',
  'justify-center',
  'responsive-text-xs',
  'font-bold',
  'dark:text-amber-600',
  'text-amber-900',
  'font-rubik-doodle',
  'w-full',
  'h-full',
  'transition-all',
  'duration-200',
  'border-amber-950',
  'dark:border-amber-600',
  'border-2',
  'dark:bg-slate-900',
  // 'dark:text-slate-300'
  'hover:scale-[1.02]',
  'hover:duration-200',
  'hover:ease-in-out'
].join(' ')
---

<a
  class={OS_STYLES}
  title='My OS'
  href='https://releases.ubuntu.com/focal/'
  target='_blank'
  rel='noopener noreferrer'
>
  <header class='flex gap-2'>
    <h1>OS</h1>
    <p class='font-thin'> </p>
  </header>
  <main>
    <p class='responsive-text-xxs'>Ubuntu 20.04.6 LTS</p>
  </main>
</a>
