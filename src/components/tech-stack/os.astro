---
import Hbox from '@components/boxes/hbox.astro'

import { siLinux, siUbuntu } from 'simple-icons'
---

<Hbox
  title='My OS'
  href='https://releases.ubuntu.com/focal/'
  animated
  otherStyles='xl:row-span-2 flex-col animate-delay-200'
>
  <header class='flex gap-2 items-center text-3xl'>
    <h1>OS</h1>
    <svg
      class={'w-6 h-6 fill-amber-900 dark:fill-amber-600'}
      set:html={siLinux.svg}
    />
    <svg
      class={'w-6 h-6 fill-amber-900 dark:fill-amber-600'}
      set:html={siUbuntu.svg}
    />
  </header>
  <section
    class='text-base font-averia flex flex-col justify-center items-center'
  >
    <p>Ubuntu 20.04.6 LTS</p>
    <p>Focal Fossa</p>
  </section>
</Hbox>
