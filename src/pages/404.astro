---
import Layout from '../layouts/layout.astro'
import Peep from '../components/css-peeps/404-peep.astro'
---

<style>
  #_404_container {
    width: 50dvw;
    height: 50dvh;
    display: grid;
    align-items: center;
    justify-items: center;
    color: white;
    border-radius: 0.5rem;
    background-color: #1b383c;
    font-family: 'Rubik Doodle Shadow', fira, sans-serif;
    /* font-size: 2rem; */
    text-align: center;
    padding: 1rem;
    box-shadow: 0 0.05rem 0 0.1rem #000;
    border: 1px solid white;
    font-weight: 600;
    gap: 0.25rem;
  }

  .go-home-button {
    color: white;
    text-decoration: none;
    border: 1px solid white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 0.05rem 0 0.1rem #000;
    transition: all 0.2s ease-in-out;
  }

  .go-home-button:hover {
    color: #1b383c;
    background-color: white;
    transform: scale(1.02);
    transition: all 0.2s ease-in-out;
  }

  #_404_background {
    filter: blur(1px);
    z-index: -1;
    width: 100vw;
    height: 100vh;
    position: fixed;
    background-image: url('/pizarra.webp');
  }
</style>

<Layout title='Resource Not Found'>
  <div id='_404_background'></div>
  <main class='w-[100dvw] h-[100dvh] grid place-content-center bg-black'>
    <div id='_404_container' class='responsive-text'>
      <h1>Page Not Found!</h1>
      <Peep />
      <p class='responsive-text-xxs font-fira'>
        Sorry, the resource you are looking for does not exist (yet?).
      </p>
      <p class='responsive-text-xxs font-fira'>
        Please check the URL and try again or go home
      </p>
      <div class='flex gap-2'>
        <a href='/' class='responsive-text-xxs go-home-button'> Go Home </a>
        <button
          class='responsive-text-xxs go-home-button'
          onclick='window.location.reload()'
        >
          Try Again </button
        >
      </div>
    </div>
  </main>
</Layout>
